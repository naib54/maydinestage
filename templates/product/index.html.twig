{% extends 'base.html.twig' %}

{% block title %}Produits
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>
			Nos produits ! ✅</h1>
 <ul>
        {% for product in products %}
            <p>{{ product.name }}</p>
			
			<p>{{ product.description }}</p>
			{% if product.category is not null %}
                        <p>Catégorie : {{ product.category.name }}</p>
            {% endif %}</p>
			{% if product.image is not null %}
                        <img src="{{ asset('assets/uploads/Bijoux/' ~ product.image) }}" alt="{{ product.name }} "class="img-fluid card-img-top"/>
                    {% endif %}
		
			<p>Prix {{ product.price }} €</p>
        {% endfor %}
    </ul>




	</div>
{% endblock %}
